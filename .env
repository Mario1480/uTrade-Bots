# ==================================================
# Environment
# ==================================================
NODE_ENV=development

# ==================================================
# Database
# ==================================================
DATABASE_URL=postgresql://mm:mm@localhost:5432/mm?schema=public

# ==================================================
# Admin Seed (wird nur beim ersten Start genutzt)
# ==================================================
ADMIN_EMAIL=admin@utrade.vip
ADMIN_PASSWORD=TempAdmin1234!
ADMIN_WORKSPACE_NAME=Main

# ==================================================
# API URLs
# ==================================================
# Oeffentlich (Browser -> lokale API)
NEXT_PUBLIC_API_URL=http://localhost:4000

# Intern (lokale Web-SSR -> lokale API)
API_BASE_URL=http://localhost:4000

# ==================================================
# AI / Provider
# ==================================================
AI_PROVIDER=openai
# OpenAI: https://api.openai.com/v1
# Ollama: http://localhost:11434/v1
AI_BASE_URL=https://api.openai.com/v1
AI_API_KEY=
AI_MODEL=gpt-4o-mini
AI_SIGNAL_ENGINE=legacy
AI_TIMEOUT_MS=30000
AI_EXPLAINER_TIMEOUT_MS=30000
AI_CACHE_TTL_SEC=300
AI_RATE_LIMIT_PER_MIN=60
AI_TOOL_TIMEOUT_MS=8000
AI_TOOL_CACHE_TTL_MS=3000
AI_TOOL_RATE_LIMIT_PER_MIN=120
AI_AGENT_MAX_TOOL_ITERATIONS=3
AI_MAX_PAYLOAD_BYTES=65536
AI_MAX_HISTORY_BYTES=16384

# ==================================================
# Cookies / Auth
# ==================================================
COOKIE_DOMAIN=
COOKIE_SECURE=false

# ==================================================
# CORS
# ==================================================
CORS_ORIGINS=http://localhost:3000

# ==================================================
# Exchange â€“ Bitmart
# ==================================================
BITMART_BASE_URL=https://api-cloud.bitmart.com

# (optional Debug)
BITMART_DEBUG=1

# ==================================================
# License / SaaS
# ==================================================
LICENSE_ENFORCEMENT=off
LICENSE_STUB_ENABLED=on
LICENSE_SERVER_URL=http://localhost:4000/license-server-stub
LICENSE_CACHE_TTL_SECONDS=600

# ==================================================
# Orchestration / Queue (BullMQ)
# ==================================================
ORCHESTRATION_MODE=poll
REDIS_URL=redis://127.0.0.1:6379
QUEUE_PREFIX=utradevip
BOT_QUEUE_NAME=bots
WORKER_CONCURRENCY=10
WORKER_LOCK_DURATION_MS=60000
WORKER_STALLED_INTERVAL_MS=30000
WORKER_MAX_STALLED_COUNT=2
BOT_RATE_LIMIT_MAX=50
BOT_RATE_LIMIT_DURATION_MS=1000
BOT_JOB_ATTEMPTS=5
BOT_JOB_BACKOFF_MS=1000
GLOBAL_TRADING_ENABLED=true
BOT_CB_MAX_ERRORS=5
BOT_CB_WINDOW_SECONDS=300
BOT_CB_COOLDOWN_SECONDS=900
BOT_CB_ACTION=stop

# ==================================================
# Secrets
# ==================================================
SECRET_MASTER_KEY=0123456789abcdef0123456789abcdef
